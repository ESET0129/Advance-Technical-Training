<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AMI_project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
@* <head> *@

@*     <meta charset="utf-t" /> *@
@*     <meta name="viewport" content="width=device-width, initial-scale=1.0" /> *@
@*     <title>@ViewData["Title"] - AMI_project</title> *@
@*     <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
@*     <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
@* </head> *@
<body>

    <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
        <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3 fs-6" asp-controller="Home" asp-action="Index">
            <i class="bi bi-house-door-fill me-2"></i> AMI_project_1
        </a>

        <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <input class="form-control form-control-dark w-100 rounded-0 border-0" type="text" placeholder="Search..." aria-label="Search">

        <div class="navbar-nav">
            <div class="nav-item text-nowrap">
                <a class_name="nav-link px-3" asp-controller="Auth" asp-action="Logout">Logout</a>
            </div>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row">

            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse">
                <div class="position-sticky pt-3 sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Meter" asp-action="Index">
                                <i class="bi bi-speedometer2 me-2"></i> Meter
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="UploadMeter" asp-action="Index">
                                <i class="bi bi-cloud-upload me-2"></i> uploadmeter
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Consumer" asp-action="Index">
                                <i class="bi bi-people me-2"></i> Consumer
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="OrgUnit" asp-action="Index">
                                <i class="bi bi-diagram-3 me-2"></i> Org Unit
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Tariff" asp-action="Index">
                                <i class="bi bi-lightbulb me-2"></i> Tariff
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="TariffSlab" asp-action="Index">
                                <i class="bi bi-bar-chart-steps me-2"></i> Tariff Slabs
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="Index">
                                <i class="bi bi-person-gear me-2"></i> Users
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">@ViewData["Title"]</h1>
                </div>

                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
