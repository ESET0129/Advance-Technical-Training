<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AMI_project</title>

    <!-- Dark/Light mode flicker fix -->
    <script>
        (function () {
            var theme = localStorage.getItem('theme');
            if (theme === 'dark') {
                document.documentElement.setAttribute('data-bs-theme', 'dark');
            } else {
                document.documentElement.setAttribute('data-bs-theme', 'light');
            }
        })();
    </script>

    <!-- Bootstrap 5.3.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" xintegrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    @if (User.Identity.IsAuthenticated)
    {
        <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
            <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3 fs-6" asp-controller="Home" asp-action="Index">
                <i class="bi bi-house-door-fill me-2"></i>
                AMI
            </a>

            <!-- Sidebar Toggle Button -->
            <button class="btn btn-dark" id="sidebarToggle" style="border-color: #333; margin-left: 10px;">
                <i class="bi bi-list"></i>
            </button>

            <!-- Mobile Menu Toggle -->
            <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Global Search -->
            <input class="form-control form-control-dark w-100 rounded-0 border-0" type="text" id="globalSearchInput" placeholder="Type a page (e.g., 'consumer') and press Enter...">

            <!-- Dark/Light Mode Toggle -->
            <div class="nav-item text-nowrap">
                <button class="btn btn-dark" id="theme-toggle">
                    <i class="bi bi-moon-fill" id="theme-icon-moon"></i>
                    <i class="bi bi-sun-fill" id="theme-icon-sun" style="display: none;"></i>
                </button>
            </div>

            <!-- Logout Button -->
            <div class="navbar-nav">
                <div class="nav-item text-nowrap">
                    <a class="nav-link px-3" asp-controller="Auth" asp-action="Logout">Logout</a>
                </div>
            </div>
        </header>
    }

    <div class="container-fluid">
        @if (User.Identity.IsAuthenticated)
        {
            <!-- Sidebar -->
            <nav id="sidebarMenu" class="d-md-block bg-dark sidebar">
                <div class="position-sticky pt-3 sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Meter" asp-action="Index">
                                <i class="bi bi-speedometer2 me-2"></i> Meter
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="UploadMeter" asp-action="Index">
                                <i class="bi bi-cloud-upload me-2"></i> uploadmeter
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Billing" asp-action="Index">
                                <i class="bi bi-receipt-cutoff me-2"></i> Billing
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Consumer" asp-action="Index">
                                <i class="bi bi-people me-2"></i> Consumer
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="OrgUnit" asp-action="Index">
                                <i class="bi bi-diagram-3 me-2"></i> Org Unit
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Tariff" asp-action="Index">
                                <i class="bi bi-lightbulb me-2"></i> Tariff
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="TariffSlabs" asp-action="Index">
                                <i class="bi bi-bar-chart-steps me-2"></i> Tariff Slabs
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="Index">
                                <i class="bi bi-person-gear me-2"></i> Users
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content Area -->
            <main id="main-content">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">@ViewData["Title"]</h1>
                </div>
                @RenderBody()
            </main>
        }
        else
        {
            <!-- Logged-out content (Login page) -->
            <main class="col-12">
                @RenderBody()
            </main>
        }
    </div>

    <!-- Full jQuery CDN -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <!-- Bootstrap 5.3.3 JS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" xintegrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>




